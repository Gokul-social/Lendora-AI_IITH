# Lendora AI - Frontend Dockerfile
# Multi-stage build for optimized production frontend

FROM node:20-alpine as builder

# Set working directory
WORKDIR /app

# Copy package files
COPY frontend/Dashboard/package*.json ./frontend/Dashboard/

# Install dependencies
WORKDIR /app/frontend/Dashboard
RUN npm ci

# Copy source code
COPY frontend/Dashboard/ ./

# Build the application
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built files
COPY --from=builder /app/frontend/Dashboard/dist /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --quiet --tries=1 --spider http://localhost/ || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]

